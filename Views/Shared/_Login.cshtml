<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width">
    <link ref="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.min.css" >
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    
    
    <title>@ViewBag.Title</title>
    <style>
          :root {
            --red: #ee596f;
            --yellow: #feb800;
            --green: #07a787;
            --purple: #c765d0;
            --gray: #787878;
            --gray-light: #eee;
            --gray-dark: #2e3c54;
            --font: "Montserrat", sans-serif;
        }

        body {
            overflow: hidden;
            position: relative;
        }

        .circle {
            position: absolute;
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        float {
            0% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-30px);
            }
            100% {
                transform: translateY(0px);
            }
        }

        .circle--red {
            width: 250px;
            height: 250px;
            background-color: var(--red);
            top: 25px;
            left: 25px;
            z-index: 1;
            animation-delay: 0s;
        }

        .circle--yellow {
            width: 100px;
            height: 100px;
            background-color: var(--yellow);
            top: 50px;
            left: 230px;
            animation-delay: 1s;
        }

        .circle--green {
            width: 300px;
            height: 300px;
            background-color: var(--green);
            bottom: 50px;
            left: 200px;
            z-index: 2;
            animation-delay: 2s;
        }

        .circle--purple {
            width: 300px;
            height: 300px;
            background-color: var(--purple);
            bottom: -50px;
            right: -50px;
            transform: scale(1.8);
            animation-delay: 3s;
        }

        /* Add a hover effect */
        .circle:hover {
            animation: scaleUp 0.5s forwards;
        }

        scaleUp {
            0% {
                transform: scale(1);
            }
            100% {
                transform: scale(1.2);
            }
        }
    </style>
</head>
<body>
    <div class="circle circle--red"></div>
    <div class="circle circle--yellow"></div>
    <div class="circle circle--green"></div>
    <div class="circle circle--purple"></div>
    <div>
        @RenderBody()
    </div>
</body>
</html>


@model doan.Models.DOIBONG

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Nen.cshtml";
}

<h2>Thêm đội bóng</h2>

@using (Html.BeginForm("Create", "DoiBong", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thông tin đội bóng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MaDoi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaDoi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaDoi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TenDoi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDoi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDoi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="upload" class="control-label col-md-2">Tải ảnh</label>
            <div class="col-md-10">
                <input type="file" name="upload" id="upload" accept=".jpg,.jpeg,.png" />
                <small class="text-muted">Chỉ hỗ trợ các file định dạng .jpg, .jpeg, .png.</small>
                @if (ViewData.ModelState["upload"] != null)
                {
                    <span class="text-danger">@ViewData.ModelState["upload"].Errors[0].ErrorMessage</span>
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm đội bóng" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "DoiBong", null, new { @class = "buton" })
</div>
